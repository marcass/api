#!/bin/bash

# Need to add services for routes after fresh kong install

# Tanks service

curl -i -X POST \
    --url http://localhost:8001/services/ \
    --data 'name=Tanks-service' \
    --data 'url=http://tank-ingress-api:5003'

#tanks route

curl -i -X POST http://localhost:8001/services/Tanks-service/routes \
    --data 'paths[]=/marcus' \
    --data name=tank-route

#grafana

curl -i -X POST \
    --url http://localhost:8001/services/ \
    --data 'name=grafana' \
    --data 'url=http://grafana:3000'

curl -i -X POST http://localhost:8001/services/grafana/routes \
    --data 'paths[]=/grafana' \
    --data name=grafana-route
